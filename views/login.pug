extends ./layout.pug
block contenido
  form(action='/login' method='post')
    .form-group
      label(for='email') Email
      input#email.form-control(type='email' name='email')
    .form-group
      label(for='password_digest') Password
      input#password_digest.form-control(type='password' name='password_digest')
    .form-group.center
      input.btn.btn-primary(type='submit' value='Login')
